package com.john_cardona;

public class Main {

    public static void main(String[] args) {

       suma sumarNumeros = new suma();
       sumarNumeros.SumNumbers();
       System.out.println("La suma de los 3 n√∫mero es: "+  sumarNumeros.resultado);

       coche doorsNumber = new coche();
       doorsNumber.SumDoors();
       System.out.println("El coche tiene: " + doorsNumber.numDoors + " puerta");

    }

}

class suma {
    public int num1 = 20;
    public int num2 = 15;
    public int num3 = 5;
    public int resultado;

    public void SumNumbers() {
        this.resultado = num1 + num2 + num3;
    }
}

class coche {
    public int numDoors;

    public void SumDoors (){
        this.numDoors++;
    }

}
